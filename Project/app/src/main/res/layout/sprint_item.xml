<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/customborder"
    android:backgroundTint="@android:color/white"
    android:orientation="horizontal"
    android:padding="20dp">

    <ImageView
        android:id="@+id/placeholder_image_item_s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/sprint_name_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="fill_vertical|center"
            android:padding="10dp"
            android:text="Sprint name"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="bold" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/description_item_s"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="fill_vertical|center"
            android:padding="10dp"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/percentage_complete_item_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_vertical|center"
                android:padding="10dp"
                android:layout_weight="3"
                android:text="50% Complete"
                android:textColor="@color/white"
                android:textSize="14sp"/>


            <Button
                android:id="@+id/btn_s_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:backgroundTint="@color/white_button"
                android:drawableBottom="@drawable/ic_edit_black" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>